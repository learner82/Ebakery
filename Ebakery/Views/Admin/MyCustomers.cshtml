@model Ebakery.Models.CombinedViewModel


@{

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}





    <div class="row">
        <div class="col-md-8">
            <table class="table table-borderless table-hover">
                <caption> Οι πέλάτες μας</caption>
                <tr>
                    <th> Όνομα </th>
                    <th> Επώνυμο </th>
                    <th> Τηλέφωνο </th>
                    <th> Οδός </th>
                    <th> Αριθμός</th>
                    <th> Τ.Κ. </th>
                    <th> Email </th>
                    <th> Σύνολο παραγγελιών</th>
                    <th> Σύνολο πληρωμών</th>
                </tr>
                @foreach (var Customer in Model.Users)
                {
                    <tr>
                        <td> @Customer.Name </td>
                        <td> @Customer.Surname </td>
                        <td> @Customer.Telephone </td>
                        <td> @Customer.StreetName </td>
                        <td style="text-align:center"> @Customer.StreetNumber</td>
                        <td> @Customer.ZipCode </td>
                        <td> @Customer.Email </td>
                        <td style="text-align:center">  @Customer.Orders.Count() </td>
                        <td> @Customer.Orders.Sum(x=>x.TotalPrice)€ </td>
                    </tr>
                }
            </table>
        </div>
    </div>


@if (ViewBag.EmptyList == true)
{
    <h1>Δεν υπάρχουν εγγεγραμμένοι χρήστες</h1>
}
